<h1 class="home_title text-center"> Your local tattoo artists </h1>


<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <div class="row">
        <div class="col-xs-12">
          <h2>Filters</h2>
           <form class="form-filter" >
           <div class="">
            <input type="text" class="form-control" placeholder="Style">
             <input type="text" class="form-control" placeholder="Price">
              <input type="text" class="form-control" placeholder="Update postcode">
              </div>
         </form>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <h2>Artists</h2>
          <div class="row">
            <% @artists.each do |artist| %>
            <div class="col-xs-12 col-md-6">
              <div class="card2" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path(artist.picture.path) %>');">
              <%= link_to artist.full_name, artist_path(artist), class: 'link-artist'  %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class = "map">
    <div class="col-xs-6 text-center">
      <div id="map" style="width: 100%; height: 600px;"></div>

          <% content_for(:after_js) do %>
            <script>
              $(document).ready(function() {
                var handler = Gmaps.build('Google');
                handler.buildMap({ internal: { id: 'map' } }, function() {
                  markers = handler.addMarkers(<%= raw @hash.to_json %>);
                  handler.bounds.extendWith(markers);
                  handler.fitMapToBounds();
                  if (markers.length == 0) {
                    handler.getMap().setZoom(8);
                  } else if (markers.length == 1) {
                    handler.getMap().setZoom(14);
                  }
                });
              });
            </script>
          <% end %>

      </div>
    </div>
  </div>
</div>
